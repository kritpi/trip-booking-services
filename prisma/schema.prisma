datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      Boolean
  createAt    DateTime @default(now())
}

enum Role {
  Admin
  User
}

enum Gender {
  Male
  Female
  Other
}

model User {
  id          String   @id @default(uuid())
  username    String
  name        String
  lastName    String
  gender      Gender   @default(Other)
  email       String   @unique
  phoneNumber String
  birthDate   DateTime
  password    String
  role        Role     @default(User)
  created_at   DateTime @default(now())

  members      Member[]
  requirements Requirement[]
  invoices     Invoice[]
}

model Member {
  id      String @id @default(uuid())
  name    String
  gender  Gender @default(Other)
  age     String
  allergy String
  dietary String

  owner             User                @relation(fields: [owner_id], references: [id])
  owner_id          String
  requirementMember RequirementMember[]
}

model Requirement {
  id                String   @id @default(uuid())
  start_date_time     DateTime
  end_date_time       DateTime
  city              String
  arrival_location   String
  departure_location String
  room_type          String
  breakfast_included Boolean
  trip_description   String
  create_at          DateTime @default(now())
  //status

  owner             User                @relation(fields: [owner_id], references: [id])
  owner_id          String
  requirementMember RequirementMember[]
  trip              Trip[]
}

model RequirementMember {
  id             String      @id @default(uuid())
  member         Member      @relation(fields: [member_id], references: [id])
  member_id      String
  requirement    Requirement @relation(fields: [requirement_id], references: [id])
  requirement_id String
}

model Trip {
  id String @id @default(uuid())
  start_date_time DateTime
  end_date_time DateTime
  city String
  arrival_location String
  departure_location String
  members Int
  hotel String
  room_type String
  breakfast_included Boolean
  price Float
  status String
  comment String

  requirement_id String
  requirement Requirement @relation(fields: [requirement_id], references: [id])
  locations Location[]
  invoices Invoice[]
}

model Location {
  id String @id @default(uuid())
  location String
  description String
  start_date_time DateTime
  end_date_time DateTime

  trip_id String
  trip Trip @relation(fields: [trip_id], references: [id])
}

model Invoice {
  id String @id @default(uuid())
  pay_date_time DateTime
  pay_price Float
  pay_check_deposit Boolean
  pay_check_remaining Boolean

  user_id String
  user User @relation(fields: [user_id], references: [id])
  trip_id String
  trip Trip @relation(fields: [trip_id], references: [id])
}